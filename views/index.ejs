<%- include('includes/head'); %> 
<%- include('includes/nav'); %> 
  <body>
    
    <div class="p-2 m-2">
      <center>
        <h1>Lista de usuarios</h1>
      </center>
      <div>
        
      </div>
      <div class="container">
        <div class="container-sm p-2 w-4">
          <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addUser"><i class="bi bi-person-plus-fill"></i> Agregar usuario</button>
        </div>
        <table class="table table-striped table-bordered table-hover table-dark">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">NOMBRE</th>
              <th scope="col">TELEFONO</th>
              <th scope="col">CORREO</th>
              <th scope="col">ACCIONES</th>
            </tr>
          </thead>
          <tbody>
            <% usuarios.forEach(function(usuario) { %>
            <tr>
              <td><%=usuario.id %></td>
              <td><%=usuario.nombre %></td>
              <td><%=usuario.telefono %></td>
              <td><%=usuario.correo %></td>
              <td>
                <a href="/user/<%=usuario.id %> " class="btn btn-primary"
                  ><i class="bi bi-eye"></i></a>
                <a href="/user/delete/<%=usuario.id %>" class="btn btn-danger"
                  ><i class="bi bi-trash"></i
                ></a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- Modal -->
<div class="modal fade" id="addUser" tabindex="-1" data-bs-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Agregar usario</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
       <form action="/user/create" method="post" class="form-control">
        <div>
          <label for="id" class="form-label">IDENTIFICACION</label>
          <input type="text" name="id" class="form-control" id="id" placeholder="Ej:2345" required>
        </div>
        <div>
          <label for="nombre" class="form-label">NOMBRE</label>
          <input type="text" name="nombre" class="form-control" id="nombre" placeholder="Ej: Juan Perez" required>
        </div>
        <div>
          <label for="correo" class="form-label">EMAIL</label>
          <input type="email" name="correo" class="form-control" id="correo" placeholder="Ej: juan@gmailcom" required>
        </div>
        <div>
          <label for="telefono" class="form-label">TELEFONO</label>
          <input type="tel" name="telefono" class="form-control" placeholder="Ej: 12344" required>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success"><i class="bi bi-check-all"></i> Guardar</button>
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal"><i class="bi bi-x-square"></i> Cerrar</button>
        </div>
       </form>
      </div>
    </div>
  </div>
</div>
  </body>

