<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div>
  <div>
    <div class="container p-2">
      <div class="d-flex justify-content-center">
        <form style="width: 35%;" class="border border-1 border-dark" action="/update/" method="post">
          <div class="container p-1" id="detail">
            <div class="d-flex justify-content-center">
              <img src="/images/person-circle.svg" alt="" srcset="" style="height: 30%; width: 30%;">
            </div>
            <div>
              <div>
                <label for="id" class="form-label ">Id:</label>
                <input type="text" class="form-control" name="id" value="<%=usuario[0].id %>" readonly>
              </div>
              <div>
                <label for="nombre" class="form-label ">Nombre:</label>
                <input type="text" class="form-control" name="nombre" value="<%=usuario[0].nombre %>">
              </div>
              <div>
                <label for="telefono" class="form-label">Telefono:</label>
                <input type="tel" class="form-control" name="telefono" value="<%=usuario[0].telefono %>">
              </div>
              <div>
                <label for="email" class="form-label">Correo:</label>
                <input type="email" class="form-control" name="correo" value="<%=usuario[0].correo %>">
              </div>
              <div class="d-flex justify-content-center p-3 m-2">
                
                <button type="submit" class="btn btn-success">Actualizar</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="p-4">
    <center>
      <h2>Tareas</h2>
    </center>
  </div>
  <div class="container d-flex p-1 m-2">

    <% usuario.forEach(function(usuario) { %>

    <div class="card m-2" style="width: 18rem; ">
      <div class="card-body">
        <h5 class="card-title">
          <%=usuario.descripcion %>
        </h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Fecha inicio: <%=usuario.fecha_inicio %>
          </li>
          <li class="list-group-item">Fecha fin: <%=usuario.fecha_fin %>
          </li>
          <!-- <li class="list-group-item border border-2 border-dark" style="background-color:<%=usuario.color %>;color: #fffffe;">Categoria: <%=usuario.nombre_categoria %></li>  -->
          </li>
          <li class="list-group-item">Estado: <%=usuario.descripcion_estado %>
          </ul>
          <div>
            <select name="" id="">
              <option value=" <%=usuario.id_estado_t %>" selected><%= usuario.descripcion_estado %></option>
              <% estados.forEach(function (estados){ %> 
                <option value="<%= estados.id %> " ><%= estados.descripcion_estado %></option>
                <% }) %> 
            </select>
          </div>
      </div>
    </div>
    <br>
    <% }); %>
  </div>
</div>
